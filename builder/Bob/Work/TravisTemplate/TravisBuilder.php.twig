language: php

php:
- 5.5

env:
- DB=mysql

before_script:
- composer install --dev
- composer selfupdate
- pyrus install --force phpunit/DbUnit
- phpenv rehash

- mysql -e "CREATE DATABASE IF NOT EXISTS resttestdb;" -uroot;

{% for entity in currentEntities %}
{% for itemKey,itemVal in entity %}
{% for itKey,itVal in itemVal %}
{% if loop.first %}
- mysql -e "CREATE TABLE IF NOT EXISTS resttestdb.{{ itemKey }} (id int(11) NOT NULL AUTO_INCREMENT,{% for key,value in itVal %}{% if not loop.first %}{{ key }} varchar(255) DEFAULT NULL, {% endif %}{% endfor %}PRIMARY KEY (id)) ENGINE=InnoDB DEFAULT CHARSET=utf8;" -uroot;
{% endif %}
- mysql -e "INSERT INTO resttestdb.{{ itemKey }} VALUES(null, {% for key,value in itVal %}{% if not loop.first %}'{{ value }}'{% if not loop.last %}, {% endif %}{% endif %}{% endfor %});" -uroot;
{% endfor %}
{% endfor %}
{% endfor %}

script: phpunit -c app/