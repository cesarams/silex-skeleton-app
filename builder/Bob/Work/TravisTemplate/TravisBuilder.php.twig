language: php

php:
- 5.5

env:
- DB=mysql

before_script:
- composer install --dev
- composer selfupdate
- pyrus install --force phpunit/DbUnit
- phpenv rehash

- mysql -e "CREATE DATABASE IF NOT EXISTS resttestdb;" -uroot;

{% for entity in currentEntities %}
{% for itemKey,itemVal in entity %}
{% for itKey,itVal in itemVal %}
{% if loop.first %}
- mysql -e "CREATE TABLE IF NOT EXISTS resttestdb.{{ itemKey }} (id int(11) NOT NULL AUTO_INCREMENT,{% for key,value in itVal %}{% if not loop.first %} {{ key }} {% for type in (value|split('_')) %}{% if loop.last %}{% if type == 'string' %}varchar(255) DEFAULT NULL,{% elseif type == 'integer' %}int(11) DEFAULT NULL,{% endif %}{% endif %}{% endfor %}{% endif %}{% endfor %} PRIMARY KEY (id)) ENGINE=InnoDB DEFAULT CHARSET=utf8;" -uroot;
{% endif %}
- mysql -e "INSERT INTO restdb.{{ itemKey }} VALUES(null,{% for key,value in itVal %}{% if not loop.first %}{% for type in (value|split('_')) %}{% if type == 'string' %}'{{ value }}'{% elseif type == 'integer' %}'0'{% endif %}{% endfor %}{% if loop.last %}{% else %},{% endif %}{% endif %}{% endfor %});" -uroot;
{% endfor %}
{% endfor %}
{% endfor %}

script: phpunit -c app/