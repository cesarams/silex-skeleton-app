<?php

$app->register(new Silex\Provider\TwigServiceProvider(), array(
    'twig.path' => array(
        __DIR__.'/../../views',
{% for item in items %}
        __DIR__.'/../../src/{{ item }}/{{ item }}Bundle/View',
{% endfor %}
    )
));

$app->register(new Silex\Provider\DoctrineServiceProvider(), array(
    'db.options' => array(
        'driver'   => '{{ driver }}',
        'dbname'   => '{{ testdbname }}',
        'host'     => '{{ host }}',
        'user'     => '{{ user }}',
        'password' => '{{ password }}',
        'port'     => {{ port }},
    ),
));
